<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MAEAssignment" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <!-- used for the status bar-->
        <item name="colorPrimaryVariant">@color/md_theme_light_primary_varient</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>

        <!-- Secondary brand color. -->
<!--        this is used for the checkbox-->
        <item name="colorSecondary">#699F1C</item>

        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MAEAssignment.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MAEAssignment.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MAEAssignment.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>